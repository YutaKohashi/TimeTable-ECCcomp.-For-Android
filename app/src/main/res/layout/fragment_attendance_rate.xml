<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_attendance_rate"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/container_total_data"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="予定単位数"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="出席率"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="出席不足単位"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="12sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="出席数"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="欠席数"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_total_unit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="28sp"
                android:textColor="@android:color/white"
                android:text="80"
                android:gravity="center"/>

            <TextView
                android:id="@+id/text_total_attendance_rate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="28sp"
                android:textColor="@android:color/white"
                android:text="80"
                android:gravity="center"/>

            <TextView
                android:id="@+id/text_total_shortageunit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="28sp"
                android:textColor="@android:color/white"
                android:text="80"
                android:gravity="center"/>

            <TextView
                android:id="@+id/text_total_attendance_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="28sp"
                android:textColor="@android:color/white"
                android:text="80"
                android:gravity="center"/>

            <TextView
                android:id="@+id/text_total_absent_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="28sp"
                android:textColor="@android:color/white"
                android:text="80"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <com.baoyz.widget.PullRefreshLayout
        android:layout_below="@+id/container_total_data"
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        app:refreshType="circles">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/attendance_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.baoyz.widget.PullRefreshLayout>
</RelativeLayout>



