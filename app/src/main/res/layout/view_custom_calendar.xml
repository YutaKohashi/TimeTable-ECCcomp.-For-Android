<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calender_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary8"
    android:orientation="vertical"
    app:layout_collapseMode="parallax"
    app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:background="@color/colorPrimary8"
        android:orientation="horizontal"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:weightSum="7">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sun."
            android:textColor="@color/calendar_header" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Mon."
            android:textColor="@color/calendar_header" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tue."
            android:textColor="@color/calendar_header" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Wed."
            android:textColor="@color/calendar_header" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Thu."
            android:textColor="@color/calendar_header" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Fri."
            android:textColor="@color/calendar_header" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sat."
            android:textColor="@color/calendar_header" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:background="@color/colorPrimary8"
        android:paddingLeft="10sp"
        android:paddingRight="10sp">

        <LinearLayout
            android:id="@+id/calendar_base_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary8"
            android:orientation="vertical"
            android:weightSum="6">

            <LinearLayout
                android:id="@+id/one_week"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="7" />

            <LinearLayout
                android:id="@+id/two_week"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="7" />

            <LinearLayout
                android:id="@+id/three_week"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="7" />

            <LinearLayout
                android:id="@+id/four_week"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="7" />

            <LinearLayout
                android:id="@+id/five_week"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="7" />

            <LinearLayout
                android:id="@+id/six_week"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="7">

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>