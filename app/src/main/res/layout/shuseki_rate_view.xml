<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="150sp"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/card_view_shuseki_root"
    card_view:cardElevation="5sp"
    android:layout_marginLeft="-2sp"
    android:layout_marginRight="-2sp"
    android:layout_marginBottom="0sp"
    android:layout_marginTop="-7sp">

    <LinearLayout
        android:id="@+id/attendance_card_view_sub_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/colorPrimary1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="教科名"
                android:textSize="16sp"
                android:layout_marginLeft="8sp"
                android:layout_centerVertical="true"
                android:id="@+id/subject_text_view"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="3sp"
            android:layout_marginRight="3sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:text="単位数"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:text="出席率"
                    android:gravity="center"
                    android:paddingRight="4sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="出席"
                    android:textSize="10sp"
                    android:gravity="center|bottom"
                    android:paddingBottom="4sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="欠席"
                    android:textSize="10sp"
                    android:gravity="center|bottom"
                    android:paddingBottom="4sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="遅刻"
                    android:textSize="10sp"
                    android:gravity="center|bottom"
                    android:paddingBottom="4sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="公欠1"
                    android:textSize="10sp"
                    android:gravity="center|bottom"
                    android:paddingBottom="4sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="公欠2"
                    android:textSize="10sp"
                    android:gravity="center|bottom"
                    android:paddingBottom="4sp"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:text="2"
                    android:textSize="26sp"
                    android:paddingBottom="1sp"
                    android:id="@+id/unit_num"
                    android:gravity="center|bottom"/>

                <!--出席率の親VIew-->
                <RelativeLayout
                    android:id="@+id/attendance_rate_root_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:paddingBottom="1sp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="25sp"
                        android:text = "100"
                        android:id="@+id/attendance_rate"
                        android:gravity="center|bottom"
                        android:layout_gravity="right"
                        android:layout_toLeftOf="@+id/percent_text_view"

                        />

                    <TextView
                        android:layout_width="20sp"
                        android:layout_height="match_parent"
                        android:id="@+id/percent_text_view"
                        android:textSize="15sp"
                        android:text = "%"
                        android:gravity="center|bottom"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="3sp"
                        android:layout_marginRight="3sp"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="15sp"
                    android:id="@+id/attendance_num"
                    android:gravity="center|bottom"
                    android:paddingBottom="4sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:id="@+id/abcent_num"
                    android:textSize="15sp"
                    android:gravity="center|bottom"
                    android:paddingBottom="4sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="15sp"
                    android:id="@+id/late_num"
                    android:gravity="center|bottom"
                    android:paddingBottom="4sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="15sp"
                    android:gravity="center|bottom"
                    android:id="@+id/kouketsu_num1"
                    android:paddingBottom="4sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="15sp"
                    android:id="@+id/kouketsu_num2"
                    android:gravity="center|bottom"
                    android:paddingBottom="4sp"/>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>