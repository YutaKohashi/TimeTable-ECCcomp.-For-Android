<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_time_block"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-1.5sp"
        android:layout_marginLeft="-1sp"
        android:layout_marginRight="-1sp"
        android:layout_marginTop="-1.5sp"
        card_view:cardCornerRadius="4sp"
        card_view:cardElevation="3sp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/widget_cell_text_color"
                android:gravity="center" />

            <TextView
                android:id="@+id/text_classRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@color/colorAccentLight"
                android:textColor="@color/widget_cell_text_color"
                android:gravity="center|bottom"
                android:paddingTop="2sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>