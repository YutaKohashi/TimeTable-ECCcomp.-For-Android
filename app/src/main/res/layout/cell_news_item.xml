<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_child_item"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:layout_marginBottom="0sp"
    android:layout_marginLeft="-2sp"
    android:layout_marginRight="-2sp"
    android:layout_marginTop="-7sp"
    card_view:cardElevation="5sp"
    card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:padding="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
               android:paddingTop="3sp"
                android:id="@+id/news_child_title"
                android:layout_width="0sp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:textColor="@color/widget_cell_text_color"
                android:text="タイトル"

                />

            <TextView
                android:id="@+id/news_child_time"
                android:layout_width="0sp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="〇〇/〇〇/〇〇"
                android:layout_gravity="bottom"/>

            <!--URLを格納するINVISIBLE なTextView-->
            <TextView
                android:id="@+id/url_hidden_text_view"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:visibility="invisible" />
        </LinearLayout>
    </android.support.v7.widget.CardView>